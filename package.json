{
  "name": "electron-spotify-webapp-dev",
  "productName": "spotify-webapp-dev",
  "version": "0.0.1",
  "description": "A webapp of Spotify made for the Raspberry pi. DEVELOPMENT EDITION",
  "main": "src/js/app.js",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/oxmc/electron-Spotify-webapp.git"
  },
  "scripts": {
    "make-mac": "npx @electron-forge/cli make --platform darwin",
    "make-linux": "npx @electron-forge/cli make --platform linux",
    "make": "npx @electron-forge/cli make",
    "start": "electron-forge start",
    "package": "electron-forge package"   
  },
  "author": "oxmc",
  "github": "https://github.com/oxmc",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.53",
    "@electron-forge/maker-deb": "^6.0.0-beta.53",
    "@electron-forge/maker-rpm": "^6.0.0-beta.53",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.53",
    "@electron-forge/maker-zip": "^6.0.0-beta.53",
    "electron": "^10.1.5"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./icons/app",
        "name": "Spotify-webapp-DEV",
        "executableName": "elctron-Spotify-webapp-DEV"        
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Spotify-webapp-DEV"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "icon": "./icons/app.png"
          }
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.0.6"
  }
}
